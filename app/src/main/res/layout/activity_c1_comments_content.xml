<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".C1CommentsContent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/mainbg"
        android:id="@+id/toolbar">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:padding="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C++ Tutorial"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="10dp"
            android:fontFamily="sans-serif"
            android:textSize="25sp"
            android:layout_marginLeft="45dp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/comment"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="C++ Comments"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="#fc0303"
            android:textSize="23sp"
            android:padding="8dp"
            android:layout_marginLeft="6dp"/>
    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Comment Description"
            android:textSize="17sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:paddingLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textIsSelectable="true"/>

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/single_line"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Single-line Comments"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="#fc0303"
                    android:textSize="23sp"
                    android:padding="8dp"
                    android:layout_marginLeft="6dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/single_line_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Single Lines Begin Description"
                android:textSize="17sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:paddingLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textIsSelectable="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_light_background"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp">

                    <TextView
                        android:id="@+id/output_single_comment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Hello Wold! (Begin Comment)"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textColor="#fc0303"
                        android:textSize="20sp"
                        android:padding="8dp"
                        android:layout_marginLeft="20dp"
                        android:textIsSelectable="true"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
         </LinearLayout>

        <TextView
            android:id="@+id/single_line_end_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Single Lines End Description"
            android:textSize="17sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:paddingLeft="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textIsSelectable="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">

                <TextView
                    android:id="@+id/output_single_line_end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hello Wold! (End Comment)"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="#fc0303"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:layout_marginLeft="20dp"
                    android:textIsSelectable="true"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/multi_line"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="C++ Multi-line Comments"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="#fc0303"
                    android:textSize="23sp"
                    android:padding="8dp"
                    android:layout_marginLeft="6dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/multi_line_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Multi Comment Description"
                android:textSize="17sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:paddingLeft="12dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textIsSelectable="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_light_background"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp">

                    <TextView
                        android:id="@+id/output_multi_comment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Hello Wold! (w/ multiComment)"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textColor="#fc0303"
                        android:textSize="20sp"
                        android:padding="8dp"
                        android:layout_marginLeft="20dp"
                        android:textIsSelectable="true"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/say"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Single or multi-line comments?"
            android:textSize="20sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:paddingLeft="12dp"
            android:background="#fff9a6"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textIsSelectable="true"/>
    </LinearLayout>
  </ScrollView>
</RelativeLayout>