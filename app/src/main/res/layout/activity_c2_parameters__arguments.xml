<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".C2Parameters_Arguments">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/mainbg"
        android:id="@+id/toolbar">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:padding="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C++ Functions"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="10dp"
            android:fontFamily="sans-serif"
            android:textSize="25sp"
            android:layout_marginLeft="45dp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/function_parameter"
            android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="C++ Functions Parameters"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="#fc0303"
                android:textSize="23sp"
                android:padding="8dp"
                android:layout_marginLeft="6dp"/>
        </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/parameter_arguments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Parameters and Arguments"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="#fc0303"
                android:paddingLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textIsSelectable="true"/>

            <TextView
                android:id="@+id/parameter_arguments_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Parameter and Arguments Content"
                android:textSize="17sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:paddingLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textIsSelectable="true"/>

            <TextView
                android:id="@+id/parameter_arguments_example"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Example Parameter Arguments"
                android:textSize="17sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:paddingLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textIsSelectable="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_light_background"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp">

                    <TextView
                        android:id="@+id/output_parameter_arguments"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Liam \n Jenny \n Anja"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textColor="#fc0303"
                        android:textSize="20sp"
                        android:padding="8dp"
                        android:layout_marginLeft="20dp"
                        android:textIsSelectable="true"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:id="@+id/saying_parameter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Saying"
                android:textSize="17sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:paddingLeft="12dp"
                android:background="#fff8a6"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textIsSelectable="true"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>