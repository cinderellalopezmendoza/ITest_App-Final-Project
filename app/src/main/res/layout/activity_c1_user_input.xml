<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".C1UserInput">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/mainbg"
        android:id="@+id/toolbar">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:padding="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C++ Tutorial"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="10dp"
            android:fontFamily="sans-serif"
            android:textSize="25sp"
            android:layout_marginLeft="45dp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/UserInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="C++ User Input"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="#fc0303"
                android:textSize="23sp"
                android:padding="8dp"
                android:layout_marginLeft="6dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/content_user_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="cin"
            android:textSize="17sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:paddingLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textIsSelectable="true"/>

        <TextView
            android:id="@+id/run_to_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Copy the code and Run on your compiler>>"
            android:textSize="18sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:paddingLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:background="#20a142"
            android:textIsSelectable="true"/>

            <TextView
                android:id="@+id/to_know"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="cout (see-out) cin(see-in)"
                android:textSize="17sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:paddingLeft="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#FFFEEB"
                android:textIsSelectable="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/Calculator"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Creating a Simple Calculator"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textColor="#fc0303"
                        android:textSize="23sp"
                        android:padding="8dp"
                        android:layout_marginLeft="6dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:id="@+id/calculate_sum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Calculating sum of Two numbers"
                android:textSize="17sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:paddingLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textIsSelectable="true"/>

            <TextView
                android:id="@+id/run_to_phone1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Copy the code and Run on your compiler>>"
                android:textSize="18sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:paddingLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:background="#20a142"
                android:textIsSelectable="true"/>

            <TextView
                android:id="@+id/user_made_calculator"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="There you go! You just built a basic calculator!"
                android:textSize="17sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:paddingLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textIsSelectable="true"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>