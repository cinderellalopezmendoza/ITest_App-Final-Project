<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".C3ClassesObject">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/mainbg"
        android:id="@+id/toolbar">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:padding="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C++ Classes"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="10dp"
            android:fontFamily="sans-serif"
            android:textSize="25sp"
            android:layout_marginLeft="45dp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/classes_objects"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="C++ Classes and Objects"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="#fc0303"
            android:textSize="23sp"
            android:padding="8dp"
            android:layout_marginLeft="6dp"/>
    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/classes_objects_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="C++ Classes/Objects"
            android:textSize="17sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:paddingLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textIsSelectable="true"/>

        <TextView
            android:id="@+id/classes_objects_explain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Example Explained Classes"
            android:textSize="17sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:paddingLeft="12dp"
            android:background="#fff8a6"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textIsSelectable="true"/>

        <TextView
            android:id="@+id/classes_objects_example"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Example of Classes and Objects"
            android:textSize="17sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:paddingLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textIsSelectable="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">

                <TextView
                    android:id="@+id/object_output_example"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="15 \n Some Text"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="#fc0303"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:layout_marginLeft="20dp"
                    android:textIsSelectable="true"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/classes_objects_example1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Multiple Objects Example"
            android:textSize="17sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:paddingLeft="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textIsSelectable="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">

                <TextView
                    android:id="@+id/object_output_example1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="BMX X5 1999 \n Ford Mustang 1969"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="#fc0303"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:layout_marginLeft="20dp"
                    android:textIsSelectable="true"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>